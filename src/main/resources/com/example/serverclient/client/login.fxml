<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.serverclient.client.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>

      <Label text="Авторизация" />
      <TextField fx:id="loginField" promptText="Логин" />
      <PasswordField fx:id="passwordField" promptText="Пароль" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
             <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Вход">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="registerButton" alignment="CENTER_RIGHT" onAction="#onRegisterButtonClick" text="Регистрация">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </children>
</VBox>
